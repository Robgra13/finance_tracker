
  <% if @friends %>
    <div class="card card-header results-block mt-2">
      <table class="col-md-12">
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><strong>Name: </strong> <%= friend.full_name %> | </td>
              <td><strong>Email: </strong> <%= friend.email %> | </td>
              <td><strong>Actions  :</strong><%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-success mr-4" %></td>

              <td>

                <% if current_user.not_friends_with?(friend.id) %>
                  <%= link_to 'Follow friend?', friendship_path(friend), data: {turbo_method: :post, turbo_confirm: 'Are you sure?' },
                  class: "btn btn-sm btn-success" %>

                  <% else %>
                  <span class="badge badge-secondary bg-dark-text">
                    You are friends
                   </span>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
