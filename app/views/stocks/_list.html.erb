<% if @stock %>
  <% if current_user.can_track_stock?(@stock.ticker) %>
  <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: @stock[:ticker]), class: "btn btn-xs btn-success ml-3", data: { "turbo-method": :post,turbo: true, local: true } %>
  <% else %>
   <span class="badge badge-secondary">
     You are already tracking
    </span>
  <% end %>
<% end %>

<div class="row">
  <div class="col-9">
    <% if @tracked_stocks.present? %>
      <table class="table table-bordered table-hover mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Ticker</th>
            <th scope="col">Price</th>
            <th scope="col class="action-column">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @tracked_stocks.each_with_index do |stock, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= stock.ticker.upcase %></td>
              <td><%= stock.price_formatted %></td>
              <td><% if current_user.can_track_stock?(stock.ticker) %>
              <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: stock[:ticker]), class: "btn btn-xs btn-success ml-3", data: { "turbo-method": :post,turbo: true, local: true } %>
              <% elsif current_user.id != @user.id %>
               <span class="badge badge-secondary">
                 You are already tracking
                </span>
              <% end %>

                <% if current_user.id == @user.id %>
                <%= link_to 'Remove', user_stock_path(stock), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'},
                class: 'btn btn-sm btn-warning' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      No tracked stocks found.
    <% end %>
  </div>
</div>
