<h1>My Friends</h1>

<div class='search-area'>
  <h3>Search Friends</h3>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Email or name", autofocus: true, class: "form-control form-control-lg"%>
      </div>
      <div class="col-sm-3 na-left-padding">
        <%= button_tag type: :sumbit, class: "btn btn-success" do %>
        <%= content_tag :i, '', class: 'fa fa-search fa-2x' %>
        <% end %>
      </div>
    </div>
 <% end %>
</div>

<%= render 'users/friend_result' %>

<div>
<%= link_to 'Back to My Friends', my_friends_path, class: 'btn btn-sm btn-light' %>
</div>
