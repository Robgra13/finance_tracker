
  <div class="row">
    <div class="col-9">
      <% if @tracked_friends.present? %>
        <table class="table table-bordered table-hover mt-3">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @tracked_friends.each_with_index do |friend, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= friend.first_name %></td>
                <td><%= friend.last_name %></td>
                <td><%= friend.email %></td>
                <td>

              <%= link_to link_to 'Unfollow', friendship_path(friend), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                          class: 'btn btn-sm btn-warning' %>
                          <%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-success mr-4" %>
            </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        No tracked friends found.
      <% end %>
    </div>
  </div>
